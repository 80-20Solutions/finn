{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SavingsGoal",
  "description": "Schema for savings goal entity with auto-adjustment tracking",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the savings goal"
    },
    "user_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID of the user (one goal per user, unique constraint)"
    },
    "amount": {
      "type": "integer",
      "minimum": 0,
      "description": "Current monthly savings goal in smallest currency unit"
    },
    "original_amount": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Initial goal before auto-adjustments (null if never adjusted)"
    },
    "adjusted_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 timestamp of last auto-adjustment (null if never adjusted)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    }
  },
  "required": ["id", "user_id", "amount", "created_at", "updated_at"],
  "additionalProperties": false,
  "examples": [
    {
      "id": "750e8400-e29b-41d4-a716-446655440002",
      "user_id": "7c9e6679-7425-40de-944b-e07fc1f90ae7",
      "amount": 50000,
      "original_amount": null,
      "adjusted_at": null,
      "created_at": "2026-01-12T10:05:00Z",
      "updated_at": "2026-01-12T10:05:00Z"
    },
    {
      "id": "750e8400-e29b-41d4-a716-446655440003",
      "user_id": "8d9e6679-7425-40de-944b-e07fc1f90ae8",
      "amount": 35000,
      "original_amount": 50000,
      "adjusted_at": "2026-01-15T14:30:00Z",
      "created_at": "2026-01-12T10:05:00Z",
      "updated_at": "2026-01-15T14:30:00Z"
    }
  ]
}
